<Window x:Class="InstaBot.CredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InstaBot"
        mc:Ignorable="d"
        Title="CredentialsWindow" Height="262.185" Width="308.63">
    <Grid KeyDown="Grid_KeyDown">
        <TextBox Text="{Binding Username}" HorizontalAlignment="Left" Height="23" Margin="119,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <TextBox Text="{Binding Password}" HorizontalAlignment="Left" Height="23" Margin="119,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="40,44,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="40,98,0,0" VerticalAlignment="Top"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="129,142,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
        <CheckBox IsChecked="{Binding PersistCredentials}" Content="Remember me" HorizontalAlignment="Left" Margin="107,197,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
